{
  "manifest_version": 3,
  "name": "Herupa â€“ Socratic DSA Helper",
  "version": "2.0",
  "description": "AI mentor for LeetCode & TakeUForward. Guides you to solve problems yourself through Socratic questioning.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://takeuforward.org/plus/dsa/problems/*"
      ],
      "js": ["content.js"]
    }
  ]
}